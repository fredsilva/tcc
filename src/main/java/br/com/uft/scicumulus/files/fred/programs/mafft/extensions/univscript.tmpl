progs="_PROGS"
for prog in $progs; do
	printf  $prog" "
done


make clean
make CC="gcc" CFLAGS="-arch ppc64 -m64 -fast  -mmacosx-version-min=10.4.0" CXX="g++" CXXFLAGS="-arch ppc64 -m64 -fast  -mmacosx-version-min=10.4.0"
for prog in $progs; do
	mv $prog $prog.ppc64
done

make clean
make CC="gcc" CFLAGS="-arch ppc -m32 -fast  -mmacosx-version-min=10.4.0" CXX="g++" CXXFLAGS="-arch ppc -m32 -fast  -mmacosx-version-min=10.4.0"
for prog in $progs; do
	mv $prog $prog.ppc32
done

make clean
make CC="gcc" CFLAGS="-arch x86_64 -fast -m64  -mmacosx-version-min=10.4.0" CXX="g++" CXXFLAGS="-arch x86_64 -fast -m64  -mmacosx-version-min=10.4.0"
for prog in $progs; do
	mv $prog $prog.intel64
done

make clean
make CC="gcc" CFLAGS="-arch i386 -fast -m32  -mmacosx-version-min=10.4.0" CXX="g++" CXXFLAGS="-arch i386 -fast -m32  -mmacosx-version-min=10.4.0"
for prog in $progs; do
	mv $prog $prog.intel32
done

set $progs
for prog in $progs; do
#	lipo -create $prog.icc $prog.ppc32 $prog.ppc64 -output $prog
	lipo -create $prog.intel64 $prog.intel32 $prog.ppc32 $prog.ppc64 -output $prog
	cp $prog ../binaries
done
